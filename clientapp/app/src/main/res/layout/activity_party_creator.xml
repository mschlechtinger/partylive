<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="party"
            type="com.example.d062589.partylive.Models.Party"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorText"
        android:background="@color/colorBackground"
        tools:context="com.example.d062589.partylive.Activities.PartyCreatorActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure Party"
                android:onClick="configurePartyDetails"
                android:layout_alignParentBottom="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create sample party at my position"
                android:onClick="createSamplePartyHere"/>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>
